class Transport:
    def __init__(self, max_speed, wheels, weight):
        self.max_speed = max_speed
        self.wheels = wheels
        self.weight = weight


class Car(Transport):
    def __init__(self, max_speed, wheels, weight, doors):
        super().__init__(max_speed, wheels, weight)
        self.doors = doors
    def inf(self):
        print(f" У  машины максимальная скорость = {self.max_speed}, ОНА имеет {self.wheels} колес, весит {self.weight} кг, и у нее {self.doors} дверей")


class Motorcycle(Transport):
    def __init__(self, max_speed, wheels, weight, engine_size):
        super().__init__(max_speed, wheels, weight)
        self.engine_size = engine_size

        def inf(self):
            print(
                f" У мотоцикла максимальная скорость = {self.max_speed}, он имеет {self.wheels} колес, весит {self.weight} кг, и у него {engine_size} дверей")


car = Car(250, 4, 600, 4)
motorcycle = Motorcycle(320, 2, 250, 600)

# Вывод описания транспортных средств
car.inf()



